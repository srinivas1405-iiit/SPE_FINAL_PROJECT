pipeline {
    agent any

    environment {
        DOCKER_IMAGE = 'srinivas1405/semantic-search-engine'
        DOCKER_TAG = "v${BUILD_NUMBER}"
        KUBECONFIG = credentials('kubeconfig') 
    }

    stages {
        stage('Build') {
            steps {
                script {
                    dir('semantic-search-engine-main') {
                        echo 'Building Docker Image...'
                        sh "docker build -t ${DOCKER_IMAGE}:${DOCKER_TAG} ."
                        sh "docker tag ${DOCKER_IMAGE}:${DOCKER_TAG} ${DOCKER_IMAGE}:latest"
                    }
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    echo 'Running Tests...'
                    // Create a temporary container to run tests
                    sh "docker run --rm ${DOCKER_IMAGE}:${DOCKER_TAG} python -m pytest tests/"
                }
            }
        }

        stage('Push') {
            steps {
                script {
                    echo 'Pushing payload to Docker Hub...'
                    
                    // "docker.withRegistry" handles the login securely without shell pipes
                    // The first argument '' means "Default Docker Hub". 
                    // The second argument is your credential ID.
                    docker.withRegistry('', 'docker-hub-credentials') {
                        
                        dir('semantic-search-engine-main') {
                            // We are already logged in here! Just push.
                            // using env vars for flexibility
                            sh "docker push ${DOCKER_IMAGE}:${DOCKER_TAG}"
                            sh "docker push ${DOCKER_IMAGE}:latest"
                        }
                    }
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    echo 'Deploying to Kubernetes using Ansible...'
                    
                    // 1. FIX: Install the missing Python library
                    // We use "pip3" because the error mentioned "/usr/bin/python3"
                    // Added --break-system-packages to bypass PEP 668 restriction in Debian 12+
                    sh 'pip3 install kubernetes --break-system-packages'
                    
                    // 2. Run the playbook with Credentials
                    // We wrap this in "withCredentials" so Ansible can access your cluster
                    withCredentials([file(credentialsId: 'kubeconfig', variable: 'KUBECONFIG')]) {
                        dir('semantic-search-engine-main/ansible') {
                            // We explicitly pass the KUBECONFIG environment variable
                            sh 'ansible-playbook deploy.yml'
                        }
                    }
                }
            }
        }
    }

    post {
        always {
            sh 'docker logout'
        }
    }
}
